<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - modeloMeseros</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link href="../css_R/Style.css" rel="stylesheet" />
    <!--El link que esta aqui es de font awesomw para los iconos -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
</head>
<body>
    <button class="navbar-toggler" onclick="toggleMenu()">
        <i id="menu-icon" class="fas fa-bars"></i> 
    </button>

    <div class="vertical-nav">
        <div class="logo">
            <i class="fas fa-store"></i> <!-- icono -->
            <span>Foodie</span>
        </div>
        <a class="nav-link text-dark" asp-area="" asp-controller="Mesas" asp-action="Index">
            <i class="fa-brands fa-pushed"></i>
        </a>
        <p class="text-white">Mesas</p>
        <a class="nav-link text-dark" asp-area="" asp-controller="Pedido_Local" asp-action="Create"> 
            <i class="fa-brands fa-pushed"></i>
        </a>
        <p class="text-white">Crear cuenta</p>

        <a href="#">
            <i class="fa-brands fa-pushed"></i>

        </a>
        <p class="text-white">Mesas</p>

        <a href="#">
            <i class="fa-brands fa-pushed"></i>
        </a>
        <p class="text-white">Mesas</p>

    </div>

    <div class="content" id="content">
        @RenderBody()
    </div>

    <script>
        function toggleMenu() {
            const nav = document.querySelector('.vertical-nav');
            const content = document.getElementById('content');
            const menuIcon = document.getElementById('menu-icon');

            nav.classList.toggle('open');  
            content.classList.toggle('shift');  

            if (nav.classList.contains('open')) {
                menuIcon.classList.remove('fa-bars');
                menuIcon.classList.add('fa-times');  
            } else {
                menuIcon.classList.remove('fa-times');
                menuIcon.classList.add('fa-bars');  
            }
        }
    </script>
</body>
</html>
