<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - modeloMeseros</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <!-- Agregar Font Awesome para los iconos -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
    <style>
        body {
            display: flex;
            margin: 0;
            height: 100vh;
            overflow-x: hidden;
        }

        .vertical-nav {
            width: 250px;
            background-color: #f44336; /* Rojo como en la imagen */
            display: flex;
            flex-direction: column;
            align-items: center;
            padding: 15px;
            position: fixed;
            top: 0;
            left: -250px; /* El menú está oculto inicialmente */
            height: 100%;
            transition: left 0.3s ease;
            z-index: 1;
        }

            .vertical-nav.open {
                left: 0; /* Muestra el menú cuando se abre */
            }

            .vertical-nav a {
                color: white;
                text-decoration: none;
                margin: 10px 0;
                text-align: center;
                padding: 10px;
                width: 100%;
                border-radius: 25px; /* Bordes redondeados */
                background-color: #fff; /* Fondo blanco de los botones */
                color: #000; /* Texto negro */
                transition: background-color 0.3s ease, transform 0.2s ease;
            }

                .vertical-nav a:hover {
                    background-color: #ffc1c1; /* Color rosado al pasar el cursor */
                    transform: scale(1.1); /* Efecto de agrandado */
                }

        .navbar-toggler {
            font-size: 30px;
            background: transparent;
            border: none;
            color: #f44336;
            position: fixed;
            top: 15px;
            left: 15px;
            z-index: 2;
        }

        .content {
            flex: 1;
            padding: 20px;
            margin-left: 0; /* Inicialmente no tiene desplazamiento */
            transition: margin-left 0.3s ease;
            z-index: 0;
        }

            .content.shift {
                margin-left: 250px; /* Da espacio cuando el menú está abierto */
            }

        .logo {
            display: flex;
            align-items: center;
            font-size: 24px;
            color: white;
            margin-bottom: 30px;
        }

            .logo i {
                margin-right: 10px;
            }
    </style>
</head>
<body>
    <!-- Botón de hamburguesa o cerrar según el estado del menú -->
    <button class="navbar-toggler" onclick="toggleMenu()">
        <i id="menu-icon" class="fas fa-bars"></i> <!-- Icono de hamburguesa por defecto -->
    </button>

    <div class="vertical-nav">
        <!-- Logo con icono de tienda y nombre "Foodie" -->
        <div class="logo">
            <i class="fas fa-store"></i> <!-- Icono de tienda de Font Awesome -->
            <span>Foodie</span>
        </div>
        <a href="#">Item 1</a>
        <a href="#">Item 2</a>
        <a href="#">Item 3</a>
        <a href="#">Item 4</a>
    </div>

    <div class="content" id="content">
        @RenderBody()
    </div>

    <script>
        // Función para alternar el estado del menú
        function toggleMenu() {
            const nav = document.querySelector('.vertical-nav');
            const content = document.getElementById('content');
            const menuIcon = document.getElementById('menu-icon');

            nav.classList.toggle('open');  // Abre o cierra el menú
            content.classList.toggle('shift');  // Desplaza el contenido

            // Cambiar el icono de la hamburguesa por el de cerrar
            if (nav.classList.contains('open')) {
                menuIcon.classList.remove('fa-bars');
                menuIcon.classList.add('fa-times');  // Icono de cerrar
            } else {
                menuIcon.classList.remove('fa-times');
                menuIcon.classList.add('fa-bars');  // Icono de hamburguesa
            }
        }
    </script>
</body>
</html>
